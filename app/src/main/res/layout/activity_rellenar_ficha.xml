<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RellenarFicha">

    <ImageView
        android:id="@+id/ic_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@id/unidad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/unidad"
        app:srcCompat="@drawable/ic_car" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/unidad"
        android:layout_width="332dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:hint="@string/textUnidad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ic_car"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/unidad_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>


    <ImageView
        android:id="@+id/ic_cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@id/cantidad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cantidad"
        app:srcCompat="@drawable/ic_person_add" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cantidad"
        android:layout_width="332dp"
        android:layout_height="62dp"
        android:hint="@string/textCantidad"
        app:layout_constraintTop_toBottomOf="@id/unidad"
        app:layout_constraintStart_toStartOf="@id/unidad">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/cantidad_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/ic_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@id/fecha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/fecha"
        app:srcCompat="@drawable/ic_calendar" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fecha"
        android:layout_width="332dp"
        android:layout_height="62dp"
        android:hint="@string/textFecha"
        app:layout_constraintTop_toBottomOf="@id/cantidad"
        app:layout_constraintStart_toStartOf="@id/cantidad"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="true"
        android:maxLines="1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fecha_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>