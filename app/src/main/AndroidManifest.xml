<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jackercito.mareagris">

    <application
        android:name=".MareaGrisApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MareaGris">
        <activity android:name=".ui.activities.list.JuegosListActivity"></activity>

        <activity
            android:name=".ui.activities.list.EmpresasListActivity"
            android:parentActivityName=".ui.activities.list.EmpresasListActivity" />

        <activity
            android:name=".RellenarFicha"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>